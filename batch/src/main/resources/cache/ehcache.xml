<?xml version="1.0" encoding="UTF-8"?>
<ehcache>

	<diskStore path="java.io.tmpdir/hibernate/batch" />

	<!-- DefaultCache setting. -->
	<defaultCache maxElementsInMemory="1000" memoryStoreEvictionPolicy="LRU" eternal="false"
		timeToIdleSeconds="300" timeToLiveSeconds="300" overflowToDisk="false" diskPersistent="false" maxElementsOnDisk="10000"/>

	<!-- Special objects setting. -->
	<cache name="com.rongdu.loans.entity.account.User" maxElementsInMemory="1000"
		memoryStoreEvictionPolicy="LRU" eternal="true" diskPersistent="false" overflowToDisk="true" maxElementsOnDisk="10000" />
	<cache name="com.rongdu.loans.entity.account.Role" maxElementsInMemory="1000"
		memoryStoreEvictionPolicy="LRU" eternal="true" diskPersistent="false" overflowToDisk="true" maxElementsOnDisk="10000" />
	<cache name="com.rongdu.loans.entity.account.Authority" maxElementsInMemory="1000"
		memoryStoreEvictionPolicy="LRU" eternal="true" diskPersistent="false" overflowToDisk="true" maxElementsOnDisk="10000" />
	<cache name="MenuAuthority" maxElementsInMemory="100" timeToIdleSeconds="300" timeToLiveSeconds="3600"
		memoryStoreEvictionPolicy="LRU" eternal="true" diskPersistent="false" overflowToDisk="true" maxElementsOnDisk="10000" />
	<cache name="OperationAuthority" maxElementsInMemory="100" timeToIdleSeconds="300" timeToLiveSeconds="3600"
		memoryStoreEvictionPolicy="LRU" eternal="true" diskPersistent="false" overflowToDisk="true" maxElementsOnDisk="10000" />
	<cache name="DictItemMap" maxElementsInMemory="100" timeToIdleSeconds="300" timeToLiveSeconds="3600"
		memoryStoreEvictionPolicy="LRU" eternal="true" diskPersistent="false" overflowToDisk="true" maxElementsOnDisk="10000" />
	<cache name="AllAuthorityMap" maxElementsInMemory="100" timeToIdleSeconds="300" timeToLiveSeconds="3600"
		memoryStoreEvictionPolicy="LRU" eternal="true" diskPersistent="false" overflowToDisk="true" maxElementsOnDisk="10000" />
			
</ehcache>